<?xml version="1.0" encoding="utf-8"?>

<decorators defaultdir="/WEB-INF/views/admin/decorators">
    <excludes>
        <pattern>/media/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/img/*</pattern>
        <pattern>/downloads/*</pattern>
    </excludes>

    <decorator name="login" page="portal_login.jsp">
        <pattern>/login.html</pattern>
        <pattern>/recover/*</pattern>
    </decorator>
    
    <decorator name="portal" page="portal.jsp">
        <pattern>/dashboard.html</pattern>
        <pattern>/apps/*</pattern>
        <pattern>/accounts/*</pattern>
        <pattern>/admin/*</pattern>
        <pattern>/menu/*</pattern>
        <pattern>/role/*</pattern>
        <pattern>/financial/*</pattern>
        <pattern>/adResource/*</pattern>
        <pattern>/adchannel/*</pattern>
        <pattern>/company/*</pattern>
        <pattern>/userchannel/*</pattern>
        <pattern>/report/*</pattern>
        <pattern>/errors/*</pattern>
        <pattern>/result/*</pattern>
        <pattern>/adpush/*</pattern>
    </decorator>

</decorators>