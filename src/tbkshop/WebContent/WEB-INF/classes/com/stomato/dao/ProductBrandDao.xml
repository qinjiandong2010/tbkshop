<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stomato.dao.ProductBrandDao">
	<resultMap type="com.stomato.domain.ProductBrand" id="productBrand"> 
		<result property="id" column="id" />
		<result property="brandName" column="brand_name" />
		<result property="remark" column="remark"/>
		<result property="cateId" column="cate_id"/>
		<result property="brandIcon" column="brand_icon"/>
		<result property="sort" column="sort"/>
	</resultMap>
	
	<insert id="add" parameterType="com.stomato.domain.ProductBrand">
		insert into t_brand (brand_name,
							remark,
							cate_id,
							brand_icon,
							sort) 
		values (#{brandName},#{remark},#{cateId},#{brandIcon},#{sort})
	</insert>
	
	<select id="get" parameterType="int" resultMap="productBrand" >
		select id,
				brand_name,
				remark,
				cate_id,
				brand_icon,
				sort
				from t_brand where id=#{id}
	</select>
	<update id="update" parameterType="com.stomato.domain.ProductBrand">
		update t_brand 
		<set>
			<if test="brandName != null">brand_name=#{brandName},</if>
			<if test="remark != null">remark=#{remark},</if>
			<if test="cateId != null">cate_id=#{cateId},</if>
			<if test="brandIcon != null">brand_icon=#{brandIcon},</if>
			<if test="sort != null">sort=#{sort}</if>
		</set>
        where id = #{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from t_brand where id = #{id}
	</delete>
	
	<select id="listTotal" parameterType="com.stomato.form.ProductBrandFormParam" resultType="int" >
		select count(1) from t_brand where 1=1
		<if test="brandName != null">
		 	and brand_name like '%${brandName}%'
		</if>
	</select>
	<select id="list" parameterType="com.stomato.form.ProductBrandFormParam" resultMap="productBrand" >
		select  id,
				brand_name,
				remark,
				cate_id,
				brand_icon,
				sort
				from t_brand where 1=1
		<if test="brandName != null">
		 	and brand_name like '%${brandName}%'
		</if>
		<if test="cateId != null">
			and cate_id = #{cateId}
		</if>
		order by sort asc
	</select>
</mapper>